<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.nbn.cloudbasedpatientreferralsystem.doctor.DoctorProfileFragment">

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Doctor's Profile"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_info_blue_grey_900_24dp"
        android:drawableEnd="@drawable/ic_info_blue_grey_900_24dp"/>

    <ImageView
        android:id="@+id/emergency"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_warning_red_900_24dp"
        />

    <ImageButton
        android:id="@+id/btn_edit_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_mode_edit_blue_grey_900_24dp"
        />

</RelativeLayout>
